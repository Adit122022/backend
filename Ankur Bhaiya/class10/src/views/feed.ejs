<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Feed | Instagram UI</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">

    <!-- Navbar -->
    <nav class="bg-white shadow-md p-4 flex justify-between items-center">
        <a href="/" class="text-2xl font-bold">Instagram</a>
        <div class="flex items-center space-x-4">
            <button onclick="togglePostForm()" class="p-2 bg-blue-500 text-white rounded-md">New Post</button>
            <img src="https://i.pinimg.com/736x/76/48/e5/7648e5f4f2f1e63b37e37a951dc764c7.jpg" class="w-16 h-16 object-cover object-bottom rounded-full" alt="User">
        </div>
    </nav>

    <!-- Post Form (Initially Hidden) -->
    <div id="postForm" class="max-w-md mx-auto bg-white p-4 mt-6 absolute right-2 hidden shadow-md rounded-lg">
        <h2 class="text-lg font-semibold mb-2">Create a Post</h2>
        <form action="/post" method="POST" class="space-y-3">
            <input type="text" name="title" placeholder="Title" class="w-full p-2 border rounded-md">
            <input type="url" name="image" class="w-full p-2 border rounded-md" placeholder="Image URL">
            <textarea name="content" placeholder="What's on your mind?" class="w-full p-2 border rounded-md"></textarea>
            <button type="submit" class="w-full bg-blue-500 text-white p-2 rounded-md">Post</button>
        </form>
    </div>

    <!-- Feed Section -->
    <div class="max-w-md mx-auto mt-6 space-y-6">
        <% posts.forEach(post => { %>
        <div class="bg-white p-4 rounded-lg shadow-md">
            <div class="flex items-center space-x-3">
                <img src="https://via.placeholder.com/40" class="w-10 h-10 rounded-full" alt="User">
                <h3 class="font-semibold">Anonymous</h3>
            </div>
            <img src="<%= post.image %>" class="mt-3 rounded-lg" alt="Post Image">
            <p class="mt-2 font-semibold"><%= post.title %></p>
            <p class="text-gray-700"><%= post.content %></p>
            <div class="flex justify-between mt-3">
                <button class="text-gray-600">‚ù§Ô∏è Like</button>
                <button class="text-gray-600">üí¨ Comment</button>
            </div>
        </div>
        <% }); %>
    </div>

    <script>
        function togglePostForm() {
            const form = document.getElementById("postForm");
            form.classList.toggle("hidden"); 
        }
    </script>

</body>
</html>
