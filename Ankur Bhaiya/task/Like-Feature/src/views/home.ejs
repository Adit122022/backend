<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Instagram UI</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 min-h-screen">
    <div class="container mx-auto p-6">
      <!-- Header -->
      <header
        class="flex items-center justify-between py-4 px-6 bg-white/20 shadow-sm mb-6"
      >
        <h1 class="text-2xl font-bold text-gray-800">ðŸ¥²ðŸ¥²</h1>
        <a
          class="bg-blue-500 text-white px-4 py-2 rounded-full hover:bg-blue-600"
          href="/create-post"
          >Create Post</a
        >
      </header>

      <!-- Posts Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <% posts.forEach(post => { %>
        <!-- Post Card -->
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          <!-- User Info -->
          <div class="flex items-center px-4 py-3">
            <img
              src="<%= post.postImage %>"
              alt="User Profile"
              class="w-10 h-10 rounded-full object-cover mr-3"
            />
            <div>
              <h2 class="text-sm font-semibold text-gray-800">
                <%= post.username %>
              </h2>
              <p class="text-xs text-gray-500"><%= post.email %></p>
            </div>
          </div>

          <!-- Post Image -->
          <img
            src="<%= post.postImage %>"
            alt="Post"
            class="w-full max-h-96 object-cover"
          />

          <!-- Interactions -->
          <div class="px-4 py-2">
            <div class="flex items-center justify-between mb-2">
              <div class="flex space-x-4">
                <!-- Like Button -->
                <a href='like/<%= post._id %>'
                  class="text-gray-600 hover:text-red-500 focus:outline-none"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                    class="w-6 h-6"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"
                    />
                  </svg>
                </a>

                <!-- Comment Button -->
                <button
                  class="text-gray-600 hover:text-blue-500 focus:outline-none"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                    class="w-6 h-6"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M3.75 21l5.086-5.086m0 0a9.003 9.003 0 1012.728-12.728 9.003 9.003 0 00-12.728 12.728z"
                    />
                  </svg>
                </button>
              </div>
            </div>

            <!-- Likes and Comments -->
            <p class="text-gray-800 text-sm font-medium mb-1">
              Liked by <%= post.likeCount%> people
            </p>
            <p class="text-gray-600 line-clamp-2 text-base">
              <%= post.caption %>
            </p>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
  </body>
</html>
