<!-- views/login.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Login</title>
  <!-- Tailwind CSS CDN -->
  <link
    href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
    rel="stylesheet"
  />
  <!-- Custom Theme Styles -->
  <style>
    /* Light theme (default) */
    .light-theme {
      background-color: #f3f4f6; /* gray-100 */
      color: #000;
    }
    /* Dark theme */
    .dark-theme {
      background-color: #111827; /* gray-900 */
      color: #f3f4f6;           /* gray-100 */
    }
    /* Dark card background */
    .dark-theme .card-bg {
      background-color: #1f2937; /* gray-800 */
    }
  </style>
</head>
<body class="light-theme min-h-screen flex flex-col">

  <!-- Header (optional) -->
  <header class="flex items-center justify-end p-4  dark:bg-gray-800">
    <button
      onclick="toggleTheme()"
      class="border px-3 py-1 rounded text-sm hover:bg-gray-300 dark:hover:bg-gray-700 transition-colors"
    >
      Toggle Theme
    </button>
  </header>

  <!-- Main Content: Login Form -->
  <main class="flex-grow flex items-center justify-center px-4">
    <div class="card-bg max-w-md w-full p-6 bg-white rounded-lg shadow-md">
      <h2 class="text-2xl font-bold mb-4 text-center">Login</h2>

      <form action="/users/login" method="POST">
        <!-- Username -->
        <div class="mb-4">
          <label for="username" class="block text-gray-500 dark:text-gray-200 font-bold mb-2">
            Username:
          </label>
          <input
            type="text"
            id="username"
            name="username"
            required
            class="w-full px-3 py-2 bg-transparent border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>

        <!-- Password -->
        <div class="mb-4">
          <label for="password" class="block text-gray-500 dark:text-gray-200 font-bold mb-2">
            Password:
          </label>
          <input
            type="password"
            id="password"
            name="password"
            required
            class="w-full px-3 py-2 bg-transparent border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>

        <!-- Submit Button -->
        <button
          type="submit"
          class="w-full mt-4 bg-green-500 text-white font-bold py-2 px-4 rounded-lg hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500"
        >
          Login
        </button>
      </form>

      <p class="text-center mt-4">
        Don't have an account?
        <a href="/users/register" class="text-blue-600 hover:underline">Register</a>
      </p>
    </div>
  </main>

  <!-- Optional Footer -->
  <footer class=" text-center py-4">
    &copy; <%= new Date().getFullYear() %> My Website. All rights reserved.
  </footer>

  <!-- Theme Toggle Script -->
  <script>
    function toggleTheme() {
      const body = document.body;
      if (body.classList.contains('light-theme')) {
        body.classList.remove('light-theme');
        body.classList.add('dark-theme');
      } else {
        body.classList.remove('dark-theme');
        body.classList.add('light-theme');
      }
    }
  </script>
</body>
</html>
