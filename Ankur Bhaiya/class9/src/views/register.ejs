<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Register</title>
  <!-- Tailwind CSS -->
  <link
    href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
    rel="stylesheet"
  />

  <!-- Custom Theme Styles -->
  <style>
    /* Light theme (default) */
    .light-theme {
      background-color: #f3f4f6; /* Tailwind gray-100 */
      color: #000;
    }

    /* Dark theme */
    .dark-theme {
      background-color: #111827; /* Tailwind gray-900 */
      color: #f3f4f6;           /* Tailwind gray-100 */
    }

    /* Card background in dark mode (optional tweak) */
    .dark-theme .card-bg {
      background-color: #1f2937; /* Tailwind gray-800 */
    }

    /* Button styling if you want to keep the same color logic in both themes */
    .toggle-btn {
      @apply px-3 py-1 border rounded ml-auto text-sm;
    }
  </style>
</head>
<body class="light-theme min-h-screen flex flex-col">

  <!-- Header (Optional) -->
  <header class="flex items-center justify-end p-4">
    <button 
      class="toggle-btn border-gray-500 hover:bg-gray-200 dark:hover:bg-gray-600 transition-colors rounded bg-gray-400 px-3 py-1"
      onclick="toggleTheme()"
    >
      Toggle Theme
    </button>
  </header>

  <!-- Registration Card -->
  <main class="flex-grow flex items-center justify-center px-4">
    <div class="card-bg max-w-md w-full p-6 bg-white rounded-lg shadow-md">
      <h2 class="text-2xl font-bold mb-4 text-center text-emerland-400">Register</h2>
      <form action="/users/register" method="POST">
        <!-- Username -->
        <div class="mb-4">
          <label for="username" class="block text-gray-500 dark:text-white font-bold mb-2">
            Username:
          </label>
          <input
            type="text"
            id="username"
            name="username"
            required
            class="w-full px-3 py-2 border bg-transparent rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>

        <!-- Email -->
        <div class="mb-4">
          <label for="email" class="block text-gray-500 dark:text-white font-bold mb-2">
            Email:
          </label>
          <input
            type="email"
            id="email"
            name="email"
            required
            class="w-full px-3 py-2 border bg-transparent rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>

        <!-- Password -->
        <div class="mb-4">
          <label for="password" class="block text-gray-500 dark:text-white font-bold mb-2">
            Password:
          </label>
          <input
            type="password"
            id="password"
            name="password"
            required
            class="w-full px-3 py-2 border bg-transparent rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>

        <!-- Submit Button -->
        <button
          type="submit"
          class="w-full mt-4 bg-green-500 text-white font-bold py-2 px-4 rounded-lg hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500"
        >
          Register
        </button>
      </form>
      <p class="text-center mt-4">
        Do You have an account?
        <a href="/users/login" class="text-blue-600 hover:underline">Login</a>
      </p>
    </div>
  </main>

  <!-- Theme Toggle Script -->
  <script>
    function toggleTheme() {
      const body = document.body;
      if (body.classList.contains('light-theme')) {
        body.classList.remove('light-theme');
        body.classList.add('dark-theme');
      } else {
        body.classList.remove('dark-theme');
        body.classList.add('light-theme');
      }
    }
  </script>
</body>
</html>
